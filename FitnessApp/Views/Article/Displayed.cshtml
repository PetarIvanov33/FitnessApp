@using FitnessApp.Core.Models
@model DisplayedArticleContent

@{
    ViewBag.Title = Model.Author;
}

<style>
    body {
        background-image: url('https://coolwallpapers.me/picsup/5688017-dark-grey-wallpapers.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>

<div class="content">
<article style="
        width: 630px;
        border: 2px solid gray;
        padding: 10px;
        border-radius: 10px;
        margin: auto;
        background-color:#DCDCDC;
      "  class="text-center center">
    <img src=@Model.ImageURL
         alt=""
         width="600"
         height="500"
         class="alignnone size-medium wp-image-560930" />
        <h1>@Model.Titel</h1>
    <h3>Автор: @Model.Author</h3>
    <h3>Категория: @Model.Category</h3>
    <p>
        @Model.Content
    </p>


</article>
</div>